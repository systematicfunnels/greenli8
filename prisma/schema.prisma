// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
        

model User {
  id          String   @id @default(uuid())
  email       String   @unique
  googleId    String?  @unique
  password    String?  // Hashed password
  name        String?
  isPro       Boolean  @default(false)
  credits     Int      @default(3)
  createdAt   DateTime @default(now())
  preferences Json?    // Stores { emailNotifications, marketingEmails, theme }
  
  reports     Report[]
  transactions CreditTransaction[]
}

model Report {
  id              String   @id @default(uuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  originalIdea    String
  summaryVerdict  String
  viabilityScore  Int
  oneLineTakeaway String
  marketReality   String
  fullReportData  Json     // Stores the complete JSON from Gemini
  
  createdAt       DateTime @default(now())
  feedback        Feedback[]
}

model CreditTransaction {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  amount    Int      // Positive for purchase, negative for usage
  reason    String   // e.g., "Report Generation", "Purchase: Pro Plan"
  createdAt DateTime @default(now())
}

model Feedback {
  id        String   @id @default(uuid())
  reportId  String
  report    Report   @relation(fields: [reportId], references: [id], onDelete: Cascade)
  rating    Int      // 1 for Thumbs Down, 5 for Thumbs Up (or simple binary)
  comment   String?
  createdAt DateTime @default(now())
}

model Waitlist {
  id        String   @id @default(uuid())
  email     String   @unique
  source    String?
  createdAt DateTime @default(now())
}
